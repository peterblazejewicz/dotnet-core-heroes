{
  "name": "coreheroes.web",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "cross-env": "^4.0.0",
    "install": "^0.8.8",
    "node-sass": "^4.5.2",
    "npm": "^4.5.0",
    "rimraf": "^2.6.1",
    "stylelint": "^7.10.1"
  },
  "scripts": {
    "dist": "npm run clean && npm run copy && npm run build && dotnet build",
    "build": "npm run build:scss",
    "build:scss": "node-sass --output wwwroot/css --source-map true --output-style expanded --source-map-contents scss",
    "build:scss:minified": "node-sass --output wwwroot/css --source-map true --output-style compressed --source-map-contents scss",
    "clean": "npm run clean:all",
    "clean:fonts": "rimraf wwwroot/fonts",
    "clean:css": "rimraf wwwroot/css",
    "clean:images": "rimraf wwwroot/images",
    "clean:all": "rimraf wwwroot/",
    "copy": "npm run copy:all",
    "copy:all": "npm run copy:assets && npm run copy:fonts",
    "copy:assets": "copyfiles -u 1 assets/*.* wwwroot && copyfiles -u 1 assets/**/* wwwroot",
    "copy:fonts": "copyfiles -u 3 node_modules/font-awesome/fonts/*.* wwwroot/fonts",
    "stylelint": "stylelint \"wwwroot/scss/*.scss\"",
    "postinstall": "dotnet restore",
    "start": "npm run dist && dotnet run",
    "serve": "cross-env ASPNETCORE_ENVIRONMENT=Development npm run start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "font-awesome": "^4.7.0",
    "jquery-validation": "^1.16.0",
    "jquery-validation-unobtrusive": "^3.2.6"
  }
}
