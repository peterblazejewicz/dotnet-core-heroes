{
  "name": "coreheroes.web",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "cross-env": "^4.0.0",
    "cssnano": "^3.10.0",
    "cssnano-cli": "^1.0.5",
    "install": "^0.8.8",
    "node-sass": "^4.5.2",
    "npm": "^4.5.0",
    "postcss-cli": "^3.1.1",
    "rimraf": "^2.6.1",
    "stylelint": "^7.10.1",
    "webpack": "^2.4.1"
  },
  "scripts": {
    "autoprefixer": "npm run autoprefixer:home && npm run autoprefixer:main",
    "autoprefixer:home": "postcss --use autoprefixer -o wwwroot/css/home.css wwwroot/css/home.css --no-map.inline",
    "autoprefixer:main": "postcss --use autoprefixer -o wwwroot/css/main.css wwwroot/css/main.css --no-map.inline",
    "build": "npm run scss && npm run postcss && npm run webpack && dotnet build",
    "build:dev": "npm run scss && npm run postcss:dev && npm run webpack",
    "clean": "npm run clean:all",
    "clean:all": "rimraf wwwroot/",
    "clean:css": "rimraf wwwroot/css",
    "clean:fonts": "rimraf wwwroot/fonts",
    "clean:images": "rimraf wwwroot/images",
    "copy": "npm run copy:all",
    "copy:all": "npm run copy:assets && npm run copy:fonts",
    "copy:assets": "copyfiles -u 2 Client/assets/*.* wwwroot && copyfiles -u 2 Client/assets/**/* wwwroot",
    "copy:fonts": "copyfiles -u 3 node_modules/font-awesome/fonts/*.* wwwroot/fonts",
    "cssnano": "npm run cssnano:home && npm run cssnano:main",
    "cssnano:home": "postcss -u cssnano -o wwwroot/css/home.min.css wwwroot/css/home.css --no-map.inline",
    "cssnano:main": "postcss -u cssnano -o wwwroot/css/main.min.css wwwroot/css/main.css --no-map.inline",
    "dist": "npm run clean && npm run copy && npm run build && dotnet build",
    "postcss": "npm run autoprefixer && npm run cssnano",
    "postcss:dev": "npm run autoprefixer",
    "postinstall": "dotnet restore",
    "scss": "node-sass --output wwwroot/css --source-map true --output-style expanded --source-map-contents Client/scss",
    "serve": "cross-env ASPNETCORE_ENVIRONMENT=Development npm run start:dev",
    "serve:prod": "cross-env ASPNETCORE_ENVIRONMENT=Production npm run start",
    "start": "npm run clean && npm run copy && npm run build && dotnet run",
    "start:dev": "npm run clean && npm run copy && npm run build:dev && dotnet run",
    "stylelint": "stylelint \"Client//scss/*.scss\"",
    "webpack": "webpack --config ./webpack.config.js --progress"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "font-awesome": "^4.7.0",
    "holderjs": "^2.9.4",
    "jquery-validation": "^1.16.0",
    "jquery-validation-unobtrusive": "^3.2.6"
  }
}
